{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node"]
  },
  "include": ["./src/features/**/*.ts", "./src/test/**/*.ts"],
  "exclude": ["node_modules"]
}
